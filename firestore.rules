rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // DEVELOPMENT RULES - ALLOW ALL ACCESS
    // TODO: Implement proper auth before production
    // ============================================
    
    // Products - open read, dev write allowed
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Banners - open read, dev write allowed
    match /banners/{bannerId} {
      allow read, write: if true;
    }
    
    // Categories - open read, dev write allowed
    match /categories/{categoryId} {
      allow read, write: if true;
    }
    
    // Subcategories - open read, dev write allowed
    match /subcategories/{subcategoryId} {
      allow read, write: if true;
    }
    
    // Dark Stores - open read, dev write allowed
    match /darkStores/{storeId} {
      allow read, write: if true;
    }
    
    // Settings - open read/write for dev
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // Users - open for dev
    match /users/{userId} {
      allow read, write: if true;
      
      match /addresses/{addressId} {
        allow read, write: if true;
      }
    }
    
    // Orders - OPEN FOR DEV (admin dashboard needs this!)
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Admins - open for dev
    match /admins/{adminId} {
      allow read, write: if true;
    }
  }
}